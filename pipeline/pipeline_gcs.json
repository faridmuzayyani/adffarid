					"variableName": "pipelineReturnValue",
					"value": [
						{
							"key": "list_image",
							"value": {
								"type": "Expression",
								"content": "@split(replace(activity('list_image').output.firstRow.concatenated_files, '\\', ''), ',')"
							}
						}
					],
